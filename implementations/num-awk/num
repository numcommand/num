#
# Maximum value.
#
# Example:
#
#     1 2 4 => 4
#
function num_max(num, num_, opts,  f) {
    f = "num_max"
    if (!(f in num_)) num_[f] = max(num)  # TODO optimize ascending & descending
    return num_[f]
}

