#
# First item.
#
# Example:
#
#   1 2 4 => 1
#
function num_first(num, num_, opts,  f) {
    f = "num_first"
    if (!(f in num_)) num_[f] = first(num)
    return num_[f]
}

function num_first_init() {
    function_init("first head", "Get the first item.")
}

